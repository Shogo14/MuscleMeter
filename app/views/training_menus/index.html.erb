<% provide(:title, 'All TrainingMenus') %>
<h1>トレーニングメニュー一覧</h1>
<table class="table table-hover">
  <thead class="thead-dark">
    <tr align="center">
      <th scope="col">トレーニング名</th>
      <th scope="col">種類</th>
      <th scope="col">主要負荷筋肉部位</th>
      <th scope="col">サブ負荷筋肉部位１</th>
      <th scope="col">サブ負荷筋肉部位２</th>
      <% if logged_in? && current_user.admin? %>
        <th scope="col">削除</th>
      <% end %>
    </tr>
  </thead>
  <tbody>
  <%= render @training_menus %>
  </tbody>
</table>

