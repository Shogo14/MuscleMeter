<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
      </h1>
    </section>
  </aside>
  <div class="col-md-8">
    <% if @user.work_outs.any? %>
      <h3>直近２回分トレーニング履歴 </h3>
      <ol class="workouts">
        <%= render @latest_work_outs %>
      </ol>
      <%= will_paginate @latest_work_outs %>
    <% end %>
  </div>
</div>