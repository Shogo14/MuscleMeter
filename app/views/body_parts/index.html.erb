<% provide(:title, 'All BodyParts') %>
<h1>筋肉部位一覧</h1>
<div class ="new_work">
  <%= render 'body_part_form' %>
</div>
<table class="table table-hover">
  <thead class="thead-dark">
    <tr>
      <th scope="col">筋肉部位名</th>
      <% if logged_in? && current_user.admin? %>
        <th scope="col">削除</th>
      <% end %>
    </tr>
  </thead>
  <tbody>
  <%= render @body_parts %>
  </tbody>
</table>

